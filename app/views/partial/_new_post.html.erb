<div class="form-group">

    <%= form_with(model:[current_user, post], remote:true) do |f| %>
        <div class="modal-body">
            <div style="margin-top: 20px; margin-left: 50px;">
                <%= f.text_field :title, placeholder: "Title", class: "clear-on-focus", style:" background-color: black;border: 2px solid grey; width:300px; height: 50px; color:white" %>
            </div>
            <div style="margin-top: 20px; margin-left: 50px;">
                <%= f.text_area :body, placeholder: "Post Body", class: "clear-on-focus", style:" background-color: black;border: 2px solid grey; width:300px; height: 50px; color:white"%>
            </div>
        </div>
        <div class="modal-footer">
            <%= f.submit class:"btn btn-outline-success" %>
        </div>
    <% end %>
</div>
<style>
    .modal-body {
      color: red;
    }
    ::placeholder {
      color: white;
    }
</style>
    

