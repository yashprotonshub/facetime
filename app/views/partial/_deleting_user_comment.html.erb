<div class="user-<%= user_comment.id %>">
    <p>
        <%= user_comment.body %> <br> 
        By 
        <%= link_to User.find(user_comment.user_id).name, user_profile_page_path(user_comment.user_id), class:"link-to-title" %><br>
        <% if user_comment.user_id == current_user.id %>
            <%= link_to "Delete", user_post_comment_path(current_user.id, user_comment.post_id, user_comment.id), method: :delete, remote:true, class:"btn btn-danger" %>   
            <%= link_to "Edit", edit_user_post_comment_path(current_user.id, user_comment.post_id, user_comment.id), class:"btn btn-success"%><br>
        <% end %>
    </p>
</div>